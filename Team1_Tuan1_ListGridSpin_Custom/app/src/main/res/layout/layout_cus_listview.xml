<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="10dp"
    android:paddingTop="10dp"
    android:paddingBottom="10dp">

    <ImageView
        android:id="@+id/img_student"
        android:layout_marginRight="10dp"
        android:layout_width="@dimen/width_img_cus"
        android:layout_height="@dimen/height_img_cus"
        android:src="@drawable/ic_flag_singapore" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_nameStudent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:textSize="15dp"
            android:text="Cambodia"
            android:textStyle="bold"
            android:layout_marginBottom="5dp"/>
        <TextView
            android:id="@+id/tv_idStudent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:textSize="15dp"
            android:text="Cambodia"
            android:layout_marginBottom="5dp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/tv_subjects"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:textSize="15dp"
            android:text="Cambodia"
            android:textStyle="bold"/>
    </LinearLayout>

</LinearLayout>
