<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CustomGridViewActivity"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sinh Viên"
        android:gravity="center"
        android:textSize="@dimen/title_size"

        android:textStyle="bold"
        />
    <EditText
        android:id="@+id/edt_nameCountry"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Moi Ban Nhap Quoc Gia"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_Them"
            android:layout_width="@dimen/width_btn_grid"
            android:layout_height="wrap_content"
            android:text="Thêm"
            android:textAllCaps="false"
            android:onClick="btnThem"/>

        <Button
            android:id="@+id/btn_Xoa"
            android:layout_width="@dimen/width_btn_grid"
            android:layout_height="wrap_content"
            android:text="Xóa"
            android:textAllCaps="false"
            android:onClick="btnXoa"/>

        <Button
            android:id="@+id/btn_Sua"
            android:layout_width="@dimen/width_btn_grid"
            android:layout_height="wrap_content"
            android:text="Sửa"
            android:textAllCaps="false"
            android:onClick="btnSua"/>
    </LinearLayout>

    <GridView
        android:id="@+id/grid_1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:numColumns="@integer/column_gridView"
        android:verticalSpacing="@dimen/vertical_Spacing_Grid"
        android:horizontalSpacing="@dimen/horizontal_Spacing_Grid"
        android:listSelector="@color/selector_grid"
        ></GridView>
</LinearLayout>