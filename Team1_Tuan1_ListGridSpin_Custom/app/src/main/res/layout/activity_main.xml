<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="@drawable/ic_action_background_hdpi">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Team1_Tuan1_LisGridSpin_Custom"
        android:gravity="center"
        android:textSize="@dimen/title_size"
        android:background="@color/title_background"
        android:textStyle="bold"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Custom ListView"
        android:onClick="Click_CusListView"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Custom Spinner"
        android:onClick="Click_CusSpin"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Custom GridView"
        android:onClick="Click_CusGrid"/>
</LinearLayout>